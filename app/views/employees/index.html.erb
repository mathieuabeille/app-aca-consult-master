
<div class="table">



  <!-- Button trigger modal -->


  <!-- Modal -->
  <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLongTitle">Import Export CSV</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <center>
        <div class="modal-body">
          <%= form_tag import_employees_path, multipart: true do %>
          <span class="btn btn-large btn-warning">
            Choisir un CSV
            <%= file_field_tag :file %>
          </span>





          <%= submit_tag "Envoyer", class: 'btn btn-large btn-warning btn-file' %>
          <% end %>
          <br/>
          <%= link_to "Exporter la base employé", employees_path(format: 'csv'), class: 'btn btn-large btn-warning btn-file' %>
        </div></center>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>

        </div>
      </div>
    </div>
  </div>









  <center><%= link_to 'Ajouter un employé', new_employee_path, class: 'btn btn-large btn-warning btn-file' %> <button type="button" class="btn btn btn-large btn-warning" data-toggle="modal" data-target="#exampleModalCenter">
    Import/Export CSV
  </button><br/><br/>
  </center>



  <table style="width:90vw; margin: auto;">
    <thead>
      <td>Nom</td>
      <td>Prénom</td>
      <td>Actions</td>
    </thead>

    <tbody>
      <% @employees.each do |emp| %>

      <tr>
       <td><%= emp.nom %></td>
       <td><%= emp.prenom %></td>
       <td>  <%= link_to ' Modifier', edit_employee_path(emp), class:'btn-table'  %>
         <%= link_to ' Supprimer',  employee_path(emp), method: :delete,   data: { confirm: 'Confirmation' } , class:'btn-table'  %>
         <%= link_to '
         Générer contrat',  new_employee_contrat_path(emp), class:'btn-table'   %>

       </td>
     </tr>
     <% end %>
   </tbody>

 </table>
</div>



</div>


