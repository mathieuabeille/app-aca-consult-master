<div class="navbar-wagon">
  <!-- Logo -->
  <%= link_to root_path, class: "navbar-wagon-brand" do %>
    <%= image_tag "logo.png" %>
  <% end %>


  <!-- Right Navigation -->
  <div class="fa navbar-wagon-right">

    <% if user_signed_in? %>

      <!-- Links when logged in -->

      <%= link_to employees_path, class: 'navbar-wagon-item navbar-wagon-link' do %> Mes employés
      <% end  %>
    <%= link_to destroy_user_session_path, class: 'navbar-wagon-item navbar-wagon-link', method: :delete do %>
                <!-- <i class="fa fa-sign-out"></i> --> <%= t(".sign_out", default: 'Déconnexion' ) %>
<% end %>
      <!-- Avatar with dropdown menu -->

    <% else %>
      <!-- Login link (when logged out) -->
      <%= link_to t(".sign_in", default: "Connexion"), new_user_session_path, class: "navbar-wagon-item navbar-wagon-link" %>
    <% end %>
  </div>

  <!-- Dropdown list appearing on mobile only -->


</div>

