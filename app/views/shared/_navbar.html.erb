<div class="navbar-wagon">
  <!-- Logo -->
  <%= link_to root_path, class: "navbar-wagon-brand" do %>
    <%= image_tag "logo.png" %>
  <% end %>


  <!-- Right Navigation -->
  <div class="fa navbar-wagon-right hidden-xs hidden-sm">

    <% if user_signed_in? %>

      <!-- Links when logged in -->

      <%= link_to employees_path, class: 'navbar-wagon-item navbar-wagon-link' do %> Mes employés
      <% end  %>
    <%= link_to destroy_user_session_path, class: 'navbar-wagon-item navbar-wagon-link', method: :delete do %>
                <!-- <i class="fa fa-sign-out"></i> --> <%= t(".sign_out", default: 'Déconnexion' ) %>
<% end %>
      <!-- Avatar with dropdown menu -->

    <% else %>
      <!-- Login link (when logged out) -->
      <%= link_to t(".sign_in", default: "Connexion"), new_user_session_path, class: "navbar-wagon-item navbar-wagon-link" %>
    <% end %>
  </div>

  <!-- Dropdown list appearing on mobile only -->

  <div class="navbar-wagon-item hidden-md hidden-lg">
 <% if user_signed_in? %>

      <!-- Links when logged in -->

      <%= link_to employees_path, class: 'navbar-wagon-item navbar-wagon-link' do %> CDD Extra
      <% end  %>


      <!-- Avatar with dropdown menu -->
      <div class="navbar-wagon-item ">
        <div class="dropdown">
        <a data-toggle='dropdown' id='navbar-wagon-menu' class='fa-bars navbar-wagon-item navbar-wagon-link dropdown-toggle'></a>

          <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Déconnexion") %>
              <% end %>
            </li>
          </ul>
        </div>
      </div>
    <% else %>
      <!-- Login link (when logged out) -->
      <%= link_to t(".sign_in", default: "Connexion"), new_user_session_path, class: "navbar-wagon-item navbar-wagon-link" %>
    <% end %>
  </div>
</div>

